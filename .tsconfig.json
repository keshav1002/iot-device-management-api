{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "removeComments": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules/*", "serverless", ".esbuild"]
}
